<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace = "jp.co.web.infrastructure.UserMapper">

    <resultMap id="result" type="jp.co.web.infrastructure.UserModel">
        <result property="roles" column="roles" />
        <result property="id"   column="id" />
        <result property="name" column="name" />
    </resultMap>

	<!-- 取得 -->
    <select id="findUserInformationByAuth" resultMap="result">
        select
            am.roles,
            um.id,
            um.name
        from
            ${dbschema}.user_mst um
        inner join
            ${dbschema}.auth_mst am
        on
            am.id = um.id
        where
            am.account  = #{account}
        and am.password = #{password}
    </select>

	<!-- 取得 -->
    <select id="findUserInformationByExist" resultMap="result">
        select
            am.roles,
            um.id,
            um.name
        from
            ${dbschema}.user_mst um
        inner join
            ${dbschema}.auth_mst am
        on
            am.id = um.id
        where
            um.id   = #{id}
        and um.name = #{name}
    </select>

</mapper>